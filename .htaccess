
# Set correct MIME type for JavaScript modules
<IfModule mod_mime.c>
  AddType application/javascript .js
  AddType application/javascript .mjs
  AddType application/json .json
  AddType text/javascript .tsx
  AddType text/javascript .jsx
  AddType text/javascript .ts
</IfModule>

# Enable CORS for font files and other assets
<IfModule mod_headers.c>
  <FilesMatch "\.(js|mjs|jsx|tsx|ts|css|json|woff|woff2|ttf|eot|svg)$">
    Header set Access-Control-Allow-Origin "*"
    Header set X-Content-Type-Options "nosniff"
  </FilesMatch>
  
  # Set correct content type for JS modules - Ensuring proper MIME type
  <FilesMatch "\.js$">
    Header set Content-Type "application/javascript"
  </FilesMatch>
  
  <FilesMatch "\.(mjs|jsx|tsx|ts)$">
    Header set Content-Type "text/javascript"
  </FilesMatch>
  
  # Add Content Security Policy header with unsafe-eval explicitly allowed
  Header set Content-Security-Policy "default-src 'self'; script-src 'self' 'unsafe-eval' 'unsafe-inline' https://cdn.gpteng.co; style-src 'self' 'unsafe-inline' https://fonts.googleapis.com; font-src 'self' https://fonts.gstatic.com; img-src 'self' data: https://sharkduct.com; connect-src 'self';"
</IfModule>

# Redirect all requests to index.html for SPA routing
<IfModule mod_rewrite.c>
  RewriteEngine On
  RewriteBase /
  RewriteRule ^index\.html$ - [L]
  RewriteCond %{REQUEST_FILENAME} !-f
  RewriteCond %{REQUEST_FILENAME} !-d
  RewriteRule . /index.html [L]
</IfModule>
